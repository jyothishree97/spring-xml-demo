<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- bean definitions here -->
    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Raj"></constructor-arg>
        <constructor-arg index="1" value="Male"></constructor-arg>
        <constructor-arg index="2" value="43"></constructor-arg>
    </bean>
    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg type="java.lang.String" value="Kumar"></constructor-arg>
        <constructor-arg type="java.lang.String" value="Male"></constructor-arg>
        <constructor-arg type="int" value="45"></constructor-arg>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Vishnu"></constructor-arg>
        <constructor-arg name="gender" value="Male"></constructor-arg>
        <constructor-arg name="age" value="42"></constructor-arg>
    </bean>

    <bean id="movie1"  class="com.stackroute.domain.Movie" autowire="byName">
        <constructor-arg name="actor" ref="actor"></constructor-arg>
    </bean>
    <bean id="movie2" class="com.stackroute.domain.Movie" autowire="byName">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>

</beans>